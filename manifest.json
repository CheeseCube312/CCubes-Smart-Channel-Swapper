{
  "manifestVersion": 5,
  "id": "com.CCube.smartchannelswapper",
  "name": "Smart Channel Swapper",
  "version": "1.0.2",
  "main": "index.html",
  "author": "Josef Brockamp (IG @workinprogress.photo)",
  "license": "MIT",
  "copyright": "(C) 2026 Josef Brockamp",
  "host": {
    "app": "PS",
    "minVersion": "22.0.0"
  },
  "requiredPermissions": {
    "localFileSystem": "request",
    "launchProcess": {
      "extensions": []
    }
  },
  "icons": [
    {
      "width": 23,
      "height": 23,
      "path": "icons/scs.png",
      "scale": [1, 2]
    }
  ],
  "entrypoints": [
    {
      "type": "panel",
      "id": "mainPanel",
      "label": {
        "default": "Smart Channel Swapper"
      },
      "icons": [
        {
          "width": 23,
          "height": 23,
          "path": "icons/scs.png",
          "scale": [1, 2]
        }
      ],
      "minimumSize": { "width": 230, "height": 200 },
      "maximumSize": { "width": 600, "height": 800 },
      "preferredDockedSize": { "width": 280, "height": 400 },
      "preferredFloatingSize": { "width": 280, "height": 400 }
    }
  ]
}
